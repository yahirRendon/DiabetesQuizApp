<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <!--Body Text theme-->
    <style name="BodyTextStyle">
        <item name="android:layout_margin">@dimen/medium_one</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/shadow_white</item>
        <item name="android:elevation">@dimen/elevation_main</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/small_one</item>
        <item name="android:textSize">@dimen/large_txt_two</item>
    </style>

    <!--Summary Text theme-->
    <style name="SummaryTextStyle">
        <item name="android:layout_margin">@dimen/medium_one</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/shadow_white</item>
        <item name="android:elevation">@dimen/elevation_main</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/small_one</item>
        <item name="android:textSize">@dimen/med_txt_two</item>
    </style>

    <!--Edit Text theme-->
    <style name="EditTextTheme">
        <item name="android:layout_margin">@dimen/medium_one</item>
        <item name="android:textSize">@dimen/large_txt_one</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/shadow_white</item>
        <item name="android:elevation">@dimen/elevation_main</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <!--Header theme-->
    <style name="HeaderTheme">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">@dimen/small_two</item>
    </style>

    <!--Header Text theme-->
    <style name="HeaderTextTheme">
        <item name="android:textSize">@dimen/large_txt_two</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingLeft">@dimen/medium_one</item>
    </style>

    <!--Footer theme-->
    <style name="FooterTheme">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Footer Text theme-->
    <style name="FooterTextTheme">
        <item name="android:textSize">@dimen/med_txt_two</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!--Button Style-->
    <style name="ButtonStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/small_two</item>
        <item name="android:stateListAnimator">@anim/elevate</item>
        <item name="android:textSize">@dimen/large_txt_one</item>
    </style>

    <!--Round Button Style-->
    <style name="RoundButtonStyle">
        <item name="android:textSize">@dimen/medium_two</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:textColor">@color/ColorAccentSecond</item>
        <item name="android:elevation">@dimen/elevation_main</item>
        <item name="android:textSize">@dimen/large_txt_one</item>
    </style>

    <!--Radio Group Style-->
    <style name="RadioGroupStyle">
        <item name="android:background">@drawable/shadow_white</item>
        <item name="android:elevation">@dimen/elevation_main</item>
        <item name="android:textSize">@dimen/large_txt_one</item>
        <!--<item name="android:padding">@dimen/small_one</item>-->
        <item name="android:layout_margin">@dimen/medium_one</item>
    </style>

    <!--Radio Button Style-->
    <style name="RadioButtonStyle">
        <item name="android:textSize">@dimen/large_txt_one</item>
        <item name="android:buttonTint">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--Checkbox Group Style-->
    <style name="CheckboxGroupStyle">
        <item name="android:background">@drawable/shadow_white</item>
        <item name="android:elevation">@dimen/elevation_main</item>
        <item name="android:textSize">@dimen/large_txt_one</item>
        <!--<item name="android:padding">@dimen/small_one</item>-->
        <item name="android:layout_margin">@dimen/medium_one</item>
    </style>

    <!--Checkbox Button Style-->
    <style name="CheckboxStyle">
        <item name="android:textSize">@dimen/large_txt_one</item>
        <item name="android:buttonTint">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>